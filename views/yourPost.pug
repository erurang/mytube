//- 메인 홈화면 올라온 비디오가 순서대로 올라가있을 계획
extends ./layouts/main.pug
include ./mixins/videoBlock.pug
include ./mixins/boardBlock.pug

block content
    ul
        li
            a(href=routes.home) 메인
        li
            a(href=routes.videos) 영상
        li
            a(href=routes.boards) 게시판
    p 비디오
        .videos
            if (videos)
                each video in videos
                    +videoBlock({
                        title:video.title,
                        views:video.views,
                        fileUrl:video.fileUrl,
                        id:video.id
                    })
    p 게시판
        .boards
            if (boards)
                each board in boards
                    +boardBlock({
                        title:board.title,
                        createdAt:board.createdAt,
                        views:board.views,
                        id:board.id  
                    })