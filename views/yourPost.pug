//- 메인 홈화면 올라온 비디오가 순서대로 올라가있을 계획
extends ./layouts/main.pug
include ./mixins/videoBlock.pug
include ./mixins/boardBlock.pug

block content
    .post_wrap
        p(class="search")=users.name
            span|님의 비디오
            .videoWrap
                if (videos)
                    each video in videos
                        +videoBlock({
                            title:video.title,
                            views:video.views,
                            fileUrl:video.fileUrl,
                            createdAt:video.createdAt,
                            id:video.id,
                            avata:video.creator.avataUrl
                        })  
        p(class="search")=users.name
            span|님의 게시글
            .videoWrap
                if (boards)
                    each board in boards
                        +boardBlock({
                            title:board.title,
                            views:board.views,
                            id:board.id,
                            createdAt:board.createdAt,
                            creator:board.creator.name,
                            avata:board.creator.avataUrl,
                            description:board.description,
                            comments:board.comments.length,
                        })    